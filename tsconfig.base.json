{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shule/backend/auth": ["libs/backend/auth/src/index.ts"],
      "@shule/backend/core": ["libs/backend/core/src/index.ts"],
      "@shule/backend/decorators": ["libs/backend/decorators/src/index.ts"],
      "@shule/backend/dtos": ["libs/backend/dtos/src/index.ts"],
      "@shule/backend/e-commerce": ["libs/backend/e-commerce/src/index.ts"],
      "@shule/backend/entities": ["libs/backend/entities/src/index.ts"],
      "@shule/backend/enums": ["libs/backend/enums/src/index.ts"],
      "@shule/backend/providers": ["libs/backend/providers/src/index.ts"],
      "@shule/backend/shared": ["libs/backend/shared/src/index.ts"],
      "@shule/backend/uploads": ["libs/backend/uploads/src/index.ts"],
      "@shule/backend/users": ["libs/backend/users/src/index.ts"],
      "@shule/frontend/components": ["libs/frontend/components/src/index.ts"],
      "@shule/helpers": ["libs/helpers/src/index.ts"],
      "@shule/web/components": ["libs/web/components/src/index.ts"],
      "@shule/web/containers": ["libs/web/containers/src/index.ts"],
      "@shule/web/helpers": ["libs/web/helpers/src/index.ts"],
      "@shule/web/middlewares": ["libs/web/middlewares/src/index.ts"],
      "@shule/web/pages": ["libs/web/pages/src/index.ts"],
      "@shule/web/redux": ["libs/web/redux/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
